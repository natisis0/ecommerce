generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  
}

// 3. The Blueprint for a Product
model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  price       Float
  description String
  image       String
  category    String
  gender      String
  createdAt   DateTime @default(now())
}
// 4. The Blueprint for a User (for Phase 2)
model User {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  email    String  @unique
  password String
  role     String  @default("user") // "user" or "admin"
}
